<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:id="@+id/items"
        android:layout_margin="10dp"
        app:cardPreventCornerOverlap="false">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/item">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/poster"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:background="@color/cardview_dark_background"
            />
            <RelativeLayout
                    android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignEnd="@id/poster" android:id="@+id/rateBar"
                    android:layout_alignRight="@id/poster">
                <ProgressBar
                        android:id="@+id/ratingBar"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/circular_progress_bar"
                        android:background="@drawable/circle_shape"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:max="100"
                        android:progress="25" />
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="2.5"
                          android:textSize="30dp"
                          android:textStyle="bold"
                          android:textColor="@color/white"
                          android:id="@+id/rate"
                          android:layout_centerHorizontal="true"
                          android:layout_centerVertical="true"
                          android:theme="@style/AudioFileInfoOverlayText"/>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/poster">
                <TextView
                        android:id="@+id/releaseDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:theme="@style/AudioFileInfoOverlayText"
                        android:text="Release date: 21-10-21"
                        android:background="#663700B3"
                        android:textSize="30sp"
                        android:gravity="center_horizontal"
                        android:visibility="invisible"/>
            </RelativeLayout>
            <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Title"
                    android:textColor="@color/white"
                    android:visibility="invisible"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:gravity="center_horizontal">

            </TextView>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>